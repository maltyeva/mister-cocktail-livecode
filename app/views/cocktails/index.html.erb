<h1 class="text-center">My Cocktails üç∏</h1>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <h4>
          <%= link_to cocktail.name, cocktail  %>
        </h4>
        <ul>
          <% cocktail.doses.each do |dose| %>
            <li>
              <%= dose.description %> - <%= link_to dose.ingredient.name, filter_cocktails_path(ingredient: dose.ingredient.name) %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a Cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
</div>