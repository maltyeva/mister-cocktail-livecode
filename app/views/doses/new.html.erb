<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h1>Add a New Dose to <%= @cocktail.name %></h1>
      <!-- cocktails/160/doses -->
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>